    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Nodemon",   
            "program": "${file}",
            "request": "launch",
            "runtimeExecutable": "nodemon",
            "runtimeArgs": ["--inspect"],
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node" 
        },
        {
            "name": "Attach Nodemon",
            "request": "attach",
            "restart": true,
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        } 
    ]
}